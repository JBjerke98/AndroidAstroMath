<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_home"
    android:orientation="horizontal"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/questionNumberTextView"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/questionNumberTextView"
        app:layout_constraintTop_toBottomOf="@+id/questionNumberTextView" />

    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="124dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:enabled="false"
        android:hint="@string/regnUtHint"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/questionTextView"
        app:layout_constraintStart_toStartOf="@+id/questionTextView"
        app:layout_constraintTop_toBottomOf="@+id/questionTextView" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="174dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#56e32b"
        android:text="Svar"
        android:textAppearance="@style/NumberTextSize"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/answerEditText"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="@+id/answerEditText"
        app:layout_constraintTop_toBottomOf="@+id/answerEditText" />

    <TextView
        android:id="@+id/questionNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/spørsmål"
        android:textAppearance="@style/Title"
        app:layout_constraintEnd_toStartOf="@+id/button1"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        style="@style/NumberButtonStyle"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        style="@style/NumberButtonStyle"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button7"
        style="@style/NumberButtonStyle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button0"
        style="@style/NumberButtonStyle"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/buttonClear"
        style="@style/NumberButtonStyle"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:text="C"
        app:layout_constraintEnd_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button1"
        style="@style/NumberButtonStyle"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="4dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        style="@style/NumberButtonStyle"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button8"
        style="@style/NumberButtonStyle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button9"
        style="@style/NumberButtonStyle"
        android:layout_marginTop="12dp"
        android:text="9"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button6"
        style="@style/NumberButtonStyle"
        android:layout_marginTop="4dp"
        android:text="6"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button3"
        style="@style/NumberButtonStyle"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="88dp"
        android:text="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>